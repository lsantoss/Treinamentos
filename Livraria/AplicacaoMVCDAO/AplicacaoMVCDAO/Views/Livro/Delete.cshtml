@model AplicacaoMVCDAO.Infra.Data.Models.Livros.Livro

<h1>Apagar Livro</h1>

<hr />

<form asp-action="Delete" method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Imagem" class="control-label"></label>
                <br />
                <img src="data:image/jpeg;base64, @Model.Imagem" height="385" width="300" alt="Capa do Livro" />
            </div>
        </div>

        <div class="col-md-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" readonly />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor" class="control-label"></label>
                <input asp-for="Autor" class="form-control" readonly />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Edicao" class="control-label"></label>
                <input asp-for="Edicao" class="form-control" readonly />
                <span asp-validation-for="Edicao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Isbn" class="control-label"></label>
                <input asp-for="Isbn" class="form-control" readonly />
                <span asp-validation-for="Isbn" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <input type="submit" value="Apagar" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-dark">Voltar</a>
            </div>
        </div>
    </div>
</form>